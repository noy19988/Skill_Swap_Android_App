<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Skill_Swap_App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3700B3</item>  <!-- כחול כהה -->
        <item name="colorPrimaryVariant">#3700B3</item>  <!-- כחול כהה יותר -->
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="editTextStyle">@style/CustomTextField</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
    </style>

    <!-- עיצוב מותאם אישית לטולבר -->
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item> <!-- ✅ טולבר סגול -->
        <item name="android:titleTextColor">@android:color/white</item> <!-- טקסט לבן -->
        <item name="android:subtitleTextColor">@android:color/white</item>
    </style>

    <!-- עיצוב כפתורים מותאם אישית -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/RoundedButton</item>
    </style>

    <!-- הגדרת פינות מעוגלות -->
    <style name="RoundedButton" parent="">
        <item name="cornerSize">8dp</item>
    </style>


    <!-- עיצוב לשדות קלט -->
    <style name="CustomTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxBackgroundColor">@color/inputFieldColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
</resources>
